<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Minescope" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azure_x_11_web</item>
        <item name="colorPrimaryVariant">@color/darker_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_munsell</item>
        <item name="colorSecondaryVariant">@color/darker_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        //LOGO IMAGE
        <item name="logo_image">@drawable/logo_light</item>

        //LAUNCH SCREEN
        <item name="android:windowBackground">@drawable/launch_screen</item>

        //FONT
        <item name="fontFamily">@font/permanent_marker</item>
    </style>
</resources>
