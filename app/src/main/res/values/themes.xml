<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Minescope" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azure_x_11_web</item>
        <item name="colorPrimaryVariant">@color/darker_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_munsell</item>
        <item name="colorSecondaryVariant">@color/darker_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        //LOGO IMAGE
        <item name="logo_image">@drawable/logo_light</item>

        //LAUNCH SCREEN
        <item name="android:windowBackground">@drawable/launch_screen</item>

        //FONT
        <item name="fontFamily">@font/permanent_marker</item>
    </style>

    //TABS
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/permanent_marker</item>
        <item name="android:textSize">20dp</item>
    </style>

    //CUSTOM DIALOG
    <style name="CustomDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/custom_dialog_bg</item>
        <item name="buttonBarButtonStyle">@style/CustomButtonStyle</item>
        <item name="android:fontFamily">@font/permanent_marker</item>
    </style>

    //DIALOG BUTTONS STYLE
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    //DIALOG ANIMATIONS
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>
